<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFDD00"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/lefttime"
                android:text="日期:"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/lefttime"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/lefttitle"
                android:text="标题:"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lefttime"
                />

            <TextView
                android:id="@+id/showtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/lefttitle"
                app:layout_constraintTop_toBottomOf="@+id/showtime"/>

            <TextView
                android:id="@+id/leftcontent"
                android:text="内容:"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lefttitle"/>

            <TextView
                android:id="@+id/showcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/leftcontent"
                app:layout_constraintTop_toBottomOf="@+id/showtitle"/>

            <TextView
                android:id="@+id/lastTime"
                android:text="还有:"
                android:textSize="16sp"
                android:layout_marginRight="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/lastday"
                android:text="00"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/lastTime"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/day"
                android:text="天"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/lastTime"
                app:layout_constraintLeft_toRightOf="@+id/lastday"/>

            <TextView
                android:id="@+id/lasthour"
                android:text="00"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/lastTime"
                app:layout_constraintLeft_toRightOf="@+id/day"/>

            <TextView
                android:id="@+id/hour"
                android:text="时"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/lastTime"
                app:layout_constraintLeft_toRightOf="@+id/lasthour"/>

            <TextView
                android:id="@+id/lastminute"
                android:text="00"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="60dp"
                app:layout_constraintTop_toBottomOf="@+id/lastday"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/day"
                app:layout_constraintLeft_toRightOf="@id/lastminute"/>

            <TextView
                android:id="@+id/lastsecond"
                android:text="00"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintLeft_toRightOf="@id/minute"
                app:layout_constraintTop_toBottomOf="@id/lasthour"/>

            <TextView
                android:id="@+id/second"
                android:text="秒"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/hour"
                app:layout_constraintLeft_toRightOf="@+id/lastsecond"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>